<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="#ffffff">
	
	<!-- DEBUT LIST -->
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" android:layout_width="640px"
		android:layout_height="fill_parent" android:background="#ffffff">

		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="horizontal" android:layout_width="640px"
			android:layout_height="wrap_content">
			<TextView android:id="@+id/previousMonth" android:layout_width="150px"
				android:gravity="center" android:layout_height="58px"
				android:background="#006fa4" android:textColor="#ffffff"
				android:textStyle="bold" android:textSize="24px" android:text="Precedent" />
			<TextView android:id="@+id/month" android:layout_width="340px"
				android:layout_height="58px" android:background="#ffffff"
				android:textColor="#006fa4" android:textStyle="bold"
				android:textSize="24px" android:gravity="center" />
			<TextView android:id="@+id/nextMonth" android:layout_width="150px"
				android:layout_height="58px" android:background="#006fa4"
				android:textColor="#ffffff" android:textStyle="bold"
				android:textSize="24px" android:text="Suivant" android:gravity="center" />
		</LinearLayout>
		
		<View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:layout_marginBottom="10px"
            android:background="#006fa4" />

		<TextView android:id="@+id/total" android:layout_width="640px"
			android:layout_height="wrap_content" android:background="#ffffff"
			android:textColor="#ff0000" android:layout_marginRight="5px"
			android:textStyle="bold" android:textSize="26px" android:gravity="right" />
		
		<View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:background="#006fa4" />

		<ListView android:id="@+id/feelist" android:layout_width="640px"
			android:layout_height="wrap_content" android:cacheColorHint="#ffffff" />
		
	</LinearLayout>
	<!-- FIN LIST -->
	
	<View
            android:layout_width="4px"
            android:layout_height="fill_parent"
            android:layout_marginTop="60px"
            android:background="#006fa4" />
	
	<!-- DEBUT CREATION -->
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" android:layout_width="640px"
		android:layout_height="fill_parent" android:background="#ffffff">
		
	    <TextView android:layout_width="fill_parent"
			android:layout_height="60px" android:background="#006fa4"
			android:textColor="#ffffff" android:textStyle="bold"
			android:textSize="24px" android:text="Dépense" android:gravity="center" />

		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="horizontal" android:layout_width="640px"
			android:layout_height="wrap_content" android:layout_marginTop="5px">
			<TextView android:text="Libellé" android:layout_marginLeft="5px"
				android:textSize="26px" android:layout_height="wrap_content"
				android:textColor="#006fa4" android:layout_marginTop="5px"
				android:textStyle="bold" android:layout_width="150px" />
			<EditText android:id="@+id/cremodLabel" android:layout_marginTop="5px"
				android:gravity="center_horizontal" android:layout_width="490px"
				android:layout_height="wrap_content" android:singleLine="true"
				android:textColor="#6a6a6a" />
		</LinearLayout>

		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="horizontal" android:layout_width="640px"
			android:layout_height="wrap_content">
			<TextView android:text="Date" android:layout_marginLeft="5px"
				android:textColor="#006fa4" android:textSize="26px"
				android:layout_height="wrap_content" android:layout_marginTop="5px"
				android:layout_width="150px" android:textStyle="bold" />
			<EditText android:id="@+id/cremodDate" android:layout_marginTop="5px"
				android:gravity="center_horizontal" android:layout_width="490px"
				android:layout_height="wrap_content" android:singleLine="true"
				android:textColor="#6a6a6a" />
		</LinearLayout>

		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="horizontal" android:layout_width="640px"
			android:layout_height="wrap_content">
			<TextView android:layout_marginTop="5px" android:textSize="26px"
				android:textColor="#006fa4" android:layout_marginLeft="5px"
				android:layout_width="150px" android:layout_height="wrap_content"
				android:textStyle="bold" android:text="Prix" />
			<EditText android:id="@+id/cremodAmount" android:digits=".0123456789"
				android:inputType="number" android:layout_marginTop="5px"
				android:layout_width="490px" android:gravity="center_horizontal"
				android:layout_height="wrap_content" android:singleLine="true"
				android:textColor="#6a6a6a" />
		</LinearLayout>

		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="horizontal" android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<TextView android:layout_marginTop="5px" android:textSize="26px"
				android:layout_marginLeft="5px" android:layout_width="150px"
				android:textColor="#006fa4" android:layout_height="wrap_content"
				android:text="Catégorie" android:textStyle="bold" />
			<Spinner android:id="@+id/cremodCategory" android:layout_width="490px"
				android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
				android:prompt="@string/to_languages_prompt" android:textColor="#6a6a6a" />
		</LinearLayout>

		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="horizontal" android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<TextView android:layout_marginTop="5px" android:textSize="26px"
				android:layout_width="150px" android:layout_height="wrap_content"
				android:textColor="#006fa4" android:layout_marginLeft="5px"
				android:text="Lieu" android:textStyle="bold" />
			<EditText android:id="@+id/cremodLocation"
				android:layout_marginTop="5px" android:layout_width="490px"
				android:layout_height="wrap_content" android:singleLine="True"
				android:textColor="#6a6a6a" />
		</LinearLayout>
		
		<EditText android:id="@+id/cremodId" android:visibility="gone"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"  />

		<Button android:id="@+id/btnAdd" android:layout_gravity="center_horizontal"
			android:layout_width="fill_parent" android:textSize="24px" android:layout_marginTop="10px" android:layout_marginBottom="10px"
			android:layout_height="wrap_content" android:text="Ajouter" android:textColor="#006fa4">
		</Button>
		
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="horizontal" android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<Button android:id="@+id/btnMod" android:layout_gravity="center_horizontal"
				android:layout_width="320px" android:textSize="24px" android:layout_marginTop="10px" android:layout_marginBottom="10px"
				android:layout_height="wrap_content" android:text="Modifier" android:textColor="#006fa4" android:visibility="gone">
			</Button>
			<Button android:id="@+id/btnClear" android:layout_gravity="center_horizontal"
				android:layout_width="320px" android:textSize="24px" android:layout_marginTop="10px" android:layout_marginBottom="10px"
				android:layout_height="wrap_content" android:text="Annuler" android:textColor="#006fa4" android:visibility="gone">
			</Button>
		</LinearLayout>
		
		<TextView android:layout_width="fill_parent"
			android:layout_height="60px" android:background="#006fa4"
			android:textColor="#ffffff" android:textStyle="bold"
			android:textSize="24px" android:text="Catégories" android:gravity="center" />
		
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="horizontal" android:layout_width="fill_parent"
			android:layout_height="wrap_content">
		    <EditText android:id="@+id/categoryToAdd"
				android:layout_width="490px"
				android:layout_height="wrap_content" android:singleLine="true"
				android:textColor="#6a6a6a" />
		    <Button android:id="@+id/btnAddCategory" android:layout_gravity="center_horizontal"
				android:layout_width="150px" android:textSize="24px"
				android:layout_height="wrap_content" android:text="Ajouter" android:textColor="#006fa4">
			</Button>
		</LinearLayout>		
		
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="horizontal" android:layout_width="fill_parent"
			android:layout_height="wrap_content">
		    <Spinner android:id="@+id/categoryToDel" android:layout_width="490px"
				android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
				android:prompt="@string/to_languages_prompt" android:textColor="#6a6a6a" />
		    <Button android:id="@+id/btnDelCategory" android:layout_gravity="center_horizontal"
				android:layout_width="150px" android:textSize="24px"
				android:layout_height="wrap_content" android:text="Supprimer" android:textColor="#006fa4">
			</Button>
		</LinearLayout>		
	</LinearLayout>
	<!-- FIN CREATION -->

</LinearLayout>