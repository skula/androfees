<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="700px"
            android:layout_height="70px"
            android:background="#006fa4"
            android:gravity="center"
            android:text="Liste des dÃ©penses"
            android:textColor="#ffffff"
            android:textSize="30px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/list_btnAdd"
            android:layout_width="99px"
            android:layout_height="70px"
            android:background="#006fa4"
            android:gravity="center"
            android:text="+"
            android:textColor="#ffffff"
            android:textSize="28px"
            android:textStyle="bold" 
            android:layout_marginLeft="1px"/>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="3px"
        android:background="#006fa4" 
        android:layout_marginTop="2px"/>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/list_previousMonth"
            android:layout_width="200px"
            android:layout_height="75px"
            android:background="#006fa4"
            android:gravity="center"
            android:text="Precedent"
            android:textColor="#ffffff"
            android:textSize="24px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/list_month"
            android:layout_width="400px"
            android:layout_height="75px"
            android:background="#ffffff"
            android:gravity="center"
            android:textColor="#006fa4"
            android:textSize="26px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/list_nextMonth"
            android:layout_width="200px"
            android:layout_height="75px"
            android:background="#006fa4"
            android:gravity="center"
            android:text="Suivant"
            android:textColor="#ffffff"
            android:textSize="24px"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="3px"
        android:layout_marginBottom="10px"
        android:background="#006fa4" />

    <TextView
        android:id="@+id/list_total"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5px"
        android:background="#ffffff"
        android:gravity="right"
        android:textColor="#ff0000"
        android:textSize="26px"
        android:textStyle="bold" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:background="#006fa4" />

    <ListView
        android:id="@+id/list_feelist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="#ffffff" />

</LinearLayout>